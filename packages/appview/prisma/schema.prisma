// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./store.db"
}

model MerchantGroup {
  uri        String  @id
  externalId String?
  name       String
  logo       String?

  locations MerchantLocation[]
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
}

model MerchantLocation {
  uri        String  @id
  externalId String?
  name       String
  address    Json
  timezone   String
  latitude   Float
  longitude  Float
  media      Json?

  groupUri String
  group    MerchantGroup @relation(fields: [groupUri], references: [uri])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
